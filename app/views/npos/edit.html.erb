<div class="signuppage">
  <div class="col-sm-4 col-sm-offset-4">
  <br>
  <div class="signupbox">
    <legend>Edit Non-Profit Organization's Profile</legend>
    <%= form_for @npo do |f| %>
      <%= f.label :name, "company name" %>:
      <%= f.text_field :name, class:"form-control", required: true %><br />
      <%= f.label :about, "about" %>:
      <%= f.text_area :about, class:"form-control", required: true %><br />
      <br>
      <%= f.submit "Update Your Profile", class:"btn btn-primary" %>
      <%= link_to "Delete This Organization", @npo, method: :delete, class:"btn btn-danger margin-right"  %>
    <% end %>
  </div>
  </div>
</div>