<!DOCTYPE html>
<html>
<head>
  <title>ProjectBullitt</title>

  <meta name="viewport" content="width=device-width, initial-scale=1">

  <%= csrf_meta_tags %>

	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.5/united/bootstrap.min.css">

	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
</head>
<body>

<nav class="navbar navbar-default">
	<div class="container-fluid">
		<%= link_to "Project Bullitt", root_path, class: "navbar-header navbar-brand" %>
		<!-- log in / log out -->
		<% if logged_in? %>
		<%= link_to "Logout", logout_path, class: "btn navbar-btn navbar-right btn-primary" %>
			
			<%= link_to "Profile", (current_user.is_npo ? npo_path(current_user) : profile_path(current_user)), class: "btn navbar-btn navbar-right btn-primary" %>			
		<% else %>
			<%= link_to "Login", login_path, class: "btn navbar-btn navbar-right btn-primary" %>
			<%= link_to "Sign Up", signup_path, class: "btn navbar-btn navbar-right btn-primary" %>
		<% end %>
	</div>
</nav>







<div="container">
	<%= yield %>
</div>





  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

</body>
</html>
