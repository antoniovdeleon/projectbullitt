<div class="new-task">
  <div class="col-sm-4 col-sm-offset-4">
  <br>
      <div class="signupbox">
        <legend>Edit Your Project</legend>
        <%= form_for [@npo, @task] do |f| %>
          <%= f.label :issue, "Project" %>:
          <%= f.text_field :issue, class:"form-control", required: true %><br />
          <%= f.label :description, "Description" %>:
          <%= f.text_area :description, class:"form-control", required: true, placeholder: "Description" %><br />
          <%= f.submit "Submit", class:"btn btn-primary" %>
        <% end %>  
    </div> 
  </div>
</div>
